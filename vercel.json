{
    "builds": [
        {
            "src":"build_staticfiles.sh",
            "use":"@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build"
            }
        },
        {
            "src": "learning_blog_app/wsgi.py",
            "use": "@vercel/python",
            "config": { 
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
        }
    }],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "learning_blog_app/wsgi.py"
        }
    ]
}
